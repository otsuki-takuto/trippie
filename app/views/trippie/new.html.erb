<div class="contents row">
  <%= form_tag('/trippie', :multipart => true, method: :post) do %>
 <!--  これはform_forのform_for(@post) do |f|記述 -->
    <h3>
      投稿する
    </h3>
    <input placeholder="どこ行った" type="text" name="local">
    <input placeholder="Image" type="file" name="image" autofocus="true">
    <!-- <input type="file" name="avatar" autofocus="true"> -->
    <textarea cols="30" name="text" placeholder="text" rows="10"></textarea>
    <input type="submit" value="SENT">
  <% end %>
</div>
